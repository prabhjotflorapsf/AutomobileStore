<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#E8E6E6"
    android:layout_marginBottom="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/wishlistimage"
            android:layout_width="162dp"
            android:layout_height="107dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="223dp"
            android:layout_height="140dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Modelwishlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Model"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/Yearwishlist"
                    android:layout_width="55dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Year"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/Transmissionwishlist"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Transmission"
                    android:textSize="20sp"
                    android:textStyle="italic" />



            </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/addresswishlist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Montreal"
        android:textSize="20sp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/Conditionwishlist"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:text="Condition"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible" />


</LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wishlistPrice"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="$999 - $1900"
                    android:textColor="#3cb6d3"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/wishlisticon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="bottom|end"
                    android:paddingRight="10dp"
                    android:src="@drawable/wishlisticon" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#3cb6d3" />

    </LinearLayout>


</RelativeLayout>